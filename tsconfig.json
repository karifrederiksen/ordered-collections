{
    "compilerOptions": {
        "target": "es2015",
        "module": "esnext",
        "lib": ["dom", "es5", "es2015"],
        "moduleResolution": "node",
        "rootDir": "src",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true
    },
    "exclude": ["benchmarks/**/*.ts", "dist"]
}
